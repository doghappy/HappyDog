@model HappyDog.Infrastructure.Pagination<HappyDog.Domain.DataTransferObjects.Article.ArticleDto>
@{
    ViewData["Title"] = "随笔";
    ViewData["Description"] = "随笔";
    ViewData["Keywords"] = "随笔";
    ViewData["SearchValue"] = "essays:";
}

@section Styles{
    <style>
        .jumbotron {
            background: url('https://upyun.doghappy.wang/blog/wwwroot/images/Ink_4x3.png');
            background-size: 50%;
            background-repeat: no-repeat;
            background-position-x: right;
        }

        div.jumbotron div.banner-text {
            background: rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
    </style>
}

<div class="jumbotron" id="paginationTarget">
    <div class="container body-content animate__animated animate__bounceInUp">
        <div class="banner-text">
            <h1 class="display-4 essays-color">随笔</h1>
            <p class="lead">
                夫运筹帷幄之中，决胜千里之外，吾不如子房；镇国家，抚百姓，给饷馈，不绝粮道，吾不如萧何；连百万之众，战必胜，攻必取，吾不如韩信。三者皆人杰，吾能用之，此吾所以取天下者也。
            </p>
            <p class="lead text-right">
                ——刘邦
            </p>
        </div>
    </div>
</div>

<div class="container body-content animate__animated animate__fadeIn">
    @await Component.InvokeAsync("ArticleDtos", new { articles = Model.Data })

    @Html.Raw(Model.GetFlexibleLinks(p => Url.Action("Essays", new { page = p }), 7))
</div>