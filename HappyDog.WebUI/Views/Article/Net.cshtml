
@{
    ViewData["Title"] = ".Net";
    var pager = (HappyDog.Infrastructure.Pager)ViewBag.Pager;
}

<div class="jumbotron" id="paginationTarget">
    <div class="container body-content animated zoomIn">
        <div class="row">
            <div class="col-md-6">
                <img src="https://www.microsoft.com/net/images/redesign/shared/developers-at-desk.svg?v=zmyD_fnoax3vsHlb11A9hjWhtNicdVy1Lk3i6KclMzU" />
            </div>
            <div class="col-md-6">
                <h1 class="display-4 netColor">.Net</h1>
                <p class="lead">
                    免费、跨平台、开源<br />
                    一个用于构建
                    <code>Web</code>、
                    <code>手机</code>、
                    <code>桌面</code>、
                    <code>游戏</code>、
                    <code>机器学习 &amp; AI</code>、
                    <code>物联网</code>、
                    <code>和其它所有应用</code>的开发平台
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container body-content animated fadeIn">
    @await Component.InvokeAsync("ArticleList", new { articles = Model })

    @Html.Raw(pager.GetPageNumberLinks(p => Url.Action("Net", new { page = p })))
</div>