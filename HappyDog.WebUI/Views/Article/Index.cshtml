@model HappyDog.Infrastructure.Pagination<HappyDog.Domain.DataTransferObjects.Article.ArticleDto>

@{
    ViewData["Title"] = "doghappy";
    ViewData["Description"] = "开心狗";
    ViewData["Keywords"] = "开心狗";
}

<div class="jumbotron" id="paginationTarget">
    <div class="container body-content animated slideInDown">
        <h1 class="display-4">开心狗</h1>
        <p class="lead">
            Don't ever let somebody tell you<br />
            You can't do something...<br /><br />
            You got a dream… You gotta protect it.<br />
            People can’t do somethin’ themselves, they wanna tell you, you can’t do it.<br />
            If you want somethin’, go get it.
        </p>
        @if (User.IsInRole("Owner"))
        {
            <p class="lead">
                <a class="btn btn-primary" href="@Url.Action("Post")">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    写文章
                </a>
            </p>
        }
    </div>
</div>

<div class="container body-content animated fadeIn">
    @await Component.InvokeAsync("ArticleDtos", new { articles = Model.Data })

    @Html.Raw(Model.GetPageNumberLinks(p => Url.Action("Index", new { page = p })))
</div>
