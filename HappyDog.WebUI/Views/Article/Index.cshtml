@using HappyDog.Domain.Enums
@model List<HappyDog.Domain.Entities.Article>

@{
    ViewData["Title"] = "doghappy";
    var pager = (HappyDog.Infrastructure.Pager)ViewBag.Pager;
}

<div class="jumbotron" id="paginationTarget">
    <div class="container body-content">
        <h1 class="display-4">开心狗</h1>
        <p class="lead">
            Don't ever let somebody tell you<br />
            You can't do something...<br /><br />
            You got a dream… You gotta protect it.<br />
            People can’t do somethin’ themselves, they wanna tell you, you can’t do it.<br />
            If you want somethin’, go get it.
        </p>
        <p class="lead">
            <a class="btn btn-primary" href="javascript:void(0)">
                <i class="fa fa-pencil" aria-hidden="true"></i>
                写文章
            </a>
        </p>
    </div>
</div>

<div class="container body-content">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card@(item.State == BaseState.Disable ? " text-white bg-secondary" : "")">
                    <div class="card-body">
                        <a href="javascript:void(0)">
                            <strong style="color:@item.Category.Color">@item.Category.Label</strong>
                        </a>
                        <h5 class="card-title">
                            <a class="@(item.State == BaseState.Enable ? "text-dark" : "text-white")" href="@Url.Action("Detail",new { id = item.Id })">
                                @item.Title
                            </a>
                        </h5>
                        <p class="mb-1 @(item.State == BaseState.Enable ? "text-muted" : "text-light")">
                            <i class="fa fa-calendar"></i>
                            @item.CreateTime.ToShortDateString()
                        </p>
                        <p class="mb-1">
                            <span class="badge badge-success" data-toggle="tooltip" title="点击量：@item.ViewCount">
                                <i class="fa fa-line-chart" aria-hidden="true"></i>
                                @item.ViewCount
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>