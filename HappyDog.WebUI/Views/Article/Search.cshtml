@{
    ViewData["Title"] = ViewData["SearchValue"];
    var pager = (HappyDog.Infrastructure.Pager)ViewBag.Pager;
}

<div class="container body-content animated fadeIn mt-5">
    @await Component.InvokeAsync("ArticleList", new { articles = Model })

    @Html.Raw(pager.GetPageNumberLinks(p => Url.Action("Index", new { page = p })))
</div>