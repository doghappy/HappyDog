@model ICollection<HappyDog.Domain.DataTransferObjects.Tag.TagDto>

@if (Model != null && Model.Count > 0)
{
    <p class="mb-1 text-muted">
        @foreach (var tag in Model)
        {
            <a class="btn btn-link badge badge-light border@(string.IsNullOrEmpty(tag.Color) ? " text-secondary" : string.Empty)"
               style="@(string.IsNullOrEmpty(tag.Color) ? string.Empty : $"color: {tag.Color};")"
               asp-controller="Tag"
               asp-action="Article"
               asp-route-name="@tag.Name">
                @if (string.IsNullOrEmpty(tag.Glyph) || string.IsNullOrEmpty(tag.GlyphFont))
                {
                    <span class="fa fa-tag"></span>
                }
                else
                {
                    <span style="font-family: '@tag.GlyphFont'; font-weight: 900">@Html.Raw(tag.Glyph)</span>
                }
                @tag.Name
            </a>
        }
    </p>
}