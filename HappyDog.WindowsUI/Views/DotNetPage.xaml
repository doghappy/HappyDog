<Page
    x:Class="HappyDog.WindowsUI.Views.DotNetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hc="using:HappyDog.WindowsUI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <hc:CategoryOutlet Articles="{x:Bind ViewModel.Articles}" IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
            <hc:CategoryOutlet.Jumbotron>
                <StackPanel Style="{StaticResource JumbotronStackPanel}">
                    <StackPanel Style="{StaticResource StackPanelContainer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Source="/Assets/Images/swimlane-dotnet-core.svg"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text=".Net"
                                       Style="{StaticResource JumbotronH1}"
                                       Foreground="#7014e8"/>
                                <TextBlock Style="{StaticResource JumbotronLead}" TextWrapping="Wrap">
                                <Run Text="免费、跨平台、开源"/>
                                <LineBreak/>
                                <Run Text="一个用于构建"/>
                                <Run Foreground="#e83e8c" Text="Web、 手机、 桌面、 游戏、 机器学习 &amp; AI、 物联网、 和其它所有应用"/>
                                <Run Text="的开发平台"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </hc:CategoryOutlet.Jumbotron>
        </hc:CategoryOutlet>
    </Grid>
</Page>
